rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read and write access to all documents for any authenticated user
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Specific rules for sensitive collections
    match /setup_users/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /users/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Allow connection testing
    match /__connectionTest__/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /test_connection/{document} {
      allow read, write: if request.auth != null;
    }
  }
}